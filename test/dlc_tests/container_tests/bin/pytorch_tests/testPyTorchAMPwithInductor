#!/bin/bash

HOME_DIR=/test
BIN_DIR=${HOME_DIR}/bin
LOG_DIR=${HOME_DIR}/logs

TRAINING_LOG=${LOG_DIR}/pytorch_train_mnist_amp_inductor.log

echo "Training mnist in AMP using PyTorch inductor... You can follow progress on the log file : $TRAINING_LOG"
set +e

python testPyTorchAMPwithInductorHelper.py 2>&1 | tee $TRAINING_LOG
RETURN_VAL=[`echo $?`] && [grep -Fxq "torchinductor done compiling" $TRAINING_LOG]
set -e

if [ ${RETURN_VAL} -eq 0 ]; then
    echo "Training mnist Complete using PyTorch AMP with inductor."
else
    echo "Training mnist Failed using PyTorch AMP with inductor."
    cat $TRAINING_LOG
    exit 1
fi

exit 0